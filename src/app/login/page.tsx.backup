'use client';
import { motion, AnimatePresence } from 'framer-motion';
import Link from 'next/link';
import { useState, useEffect } from 'react';
import { useAuth } from "@/lib/useAuth";
import { useRouter } from "next/navigation";

export default function AuthPage() {
  const [isLogin, setIsLogin] = useState(true);
  const [email, setEmail] = useState("");
  const [password, setPassword] = useState("");
  const [error, setError] = useState("");
  const [loading, setLoading] = useState(false);
  const [step, setStep] = useState(0); // For signup progression

  const { signIn, signUp, user, loading: authLoading } = useAuth();
  const router = useRouter();

  useEffect(() => {
    if (user && !authLoading) {
      router.push("/dashboard");
    }
  }, [user, authLoading, router]);

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setError("");
    setLoading(true);

    try {
      if (isLogin) {
        await signIn(email, password);
      } else {
        await signUp(email, password);
        // Animate through signup steps
        for (let i = 0; i < 3; i++) {
          await new Promise(resolve => setTimeout(resolve, 500));
          setStep(i + 1);
        }
      }
    } catch (error: any) {
      setError(error.message);
    } finally {
      setLoading(false);
    }
  };

  if (authLoading || user) {
    return <LoadingGate />;
  }

  return (
    <div className="min-h-screen relative overflow-hidden bg-gradient-to-br from-eduvos-deep via-purple-900/50 to-eduvos-innovation">
      
      {/* ✨ ENHANCED FLOATING ECOSYSTEM */}
      <div className="absolute inset-0 overflow-hidden">
        {/* Main floating particles */}
        {[...Array(30)].map((_, i) => (
          <motion.div
            key={i}
            className="absolute rounded-full opacity-20"
            style={{
              width: Math.random() * 8 + 2,
              height: Math.random() * 8 + 2,
              background: `hsl(${Math.random() * 60 + 200}, 70%, 60%)`,
              x: Math.random() * 1000,
              y: Math.random() * 1000,
            }}
            animate={{
              y: [0, -100, 0],
              x: [0, 50, 0],
              opacity: [0.1, 0.6, 0.1],
              scale: [1, 1.5, 1],
            }}
            transition={{
              duration: 8 + Math.random() * 10,
              repeat: Infinity,
              delay: Math.random() * 5,
            }}
          />
        ))}

        {/* Innovation Icons Floating */}
        {['🚀', '💡', '🌟', '⚡', '🔮', '🎯'].map((icon, i) => (
          <motion.div
            key={icon}
            className="absolute text-2xl opacity-30"
            style={{
              left: `${Math.random() * 90 + 5}%`,
              top: `${Math.random() * 90 + 5}%`,
            }}
            animate={{
              y: [0, -40, 0],
              rotate: [0, 180, 360],
              scale: [0.8, 1.2, 0.8],
            }}
            transition={{
              duration: 10 + i * 2,
              repeat: Infinity,
              delay: i * 1.5,
            }}
          >
            {icon}
          </motion.div>
        ))}
      </div>

      {/* 🌟 PULSING ENERGY ORBS */}
      <motion.div
        className="absolute top-1/4 left-1/4 w-64 h-64 bg-eduvos-innovation rounded-full filter blur-3xl opacity-20"
        animate={{
          scale: [1, 1.8, 1],
          opacity: [0.1, 0.3, 0.1],
        }}
        transition={{ duration: 8, repeat: Infinity }}
      />
      <motion.div
        className="absolute bottom-1/3 right-1/4 w-96 h-96 bg-eduvos-electric rounded-full filter blur-3xl opacity-15"
        animate={{
          scale: [1.5, 1, 1.5],
          opacity: [0.15, 0.25, 0.15],
        }}
        transition={{ duration: 12, repeat: Infinity }}
      />

      <div className="relative z-10 min-h-screen flex items-center justify-center px-4 py-8">
        <AnimatePresence mode="wait">
          <motion.div
            key={isLogin ? 'login' : 'signup'}
            initial={{ opacity: 0, scale: 0.8, rotateY: -180 }}
            animate={{ opacity: 1, scale: 1, rotateY: 0 }}
            exit={{ opacity: 0, scale: 1.2, rotateY: 180 }}
            transition={{ duration: 0.8, type: "spring" }}
            className="w-full max-w-md"
          >
            
            {/* 🎯 DYNAMIC AUTH CARD */}
            <div className="card-glass shadow-glass p-8 rounded-3xl border border-glass-border relative overflow-hidden">
              
              {/* Animated Background Pattern */}
              <div className="absolute inset-0 opacity-5">
                <div className="absolute inset-0 bg-gradient-to-br from-eduvos-electric via-transparent to-eduvos-innovation" />
              </div>

              {/* 🚀 LOGIN-SPECIFIC HEADER */}
              <AnimatePresence>
                {isLogin ? (
                  <motion.div
                    initial={{ opacity: 0, y: -50 }}
                    animate={{ opacity: 1, y: 0 }}
                    exit={{ opacity: 0, y: -50 }}
                    className="text-center mb-8"
                  >
                    <motion.div
                      className="w-20 h-20 bg-gradient-to-r from-eduvos-electric to-eduvos-innovation rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-glow"
                      animate={{ 
                        rotate: [0, 5, 0, -5, 0],
                        scale: [1, 1.05, 1]
                      }}
                      transition={{ duration: 4, repeat: Infinity }}
                    >
                      <span className="text-3xl">🔑</span>
                    </motion.div>
                    <motion.h1 
                      className="text-4xl font-bold bg-gradient-to-r from-white to-eduvos-accent bg-clip-text text-transparent mb-2"
                      initial={{ opacity: 0 }}
                      animate={{ opacity: 1 }}
                      transition={{ delay: 0.2 }}
                    >
                      Welcome Back, Innovator!
                    </motion.h1>
                    <motion.p 
                      className="text-secondary"
                      initial={{ opacity: 0 }}
                      animate={{ opacity: 1 }}
                      transition={{ delay: 0.3 }}
                    >
                      Continue your innovation journey
                    </motion.p>
                  </motion.div>
                ) : (
                  /* 🎉 SIGNUP-SPECIFIC HEADER */
                  <motion.div
                    initial={{ opacity: 0, y: -50 }}
                    animate={{ opacity: 1, y: 0 }}
                    exit={{ opacity: 0, y: -50 }}
                    className="text-center mb-8"
                  >
                    <motion.div
                      className="w-24 h-24 bg-gradient-to-r from-eduvos-innovation to-eduvos-warm rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-glow"
                      animate={{ 
                        rotate: [0, 360],
                        scale: [1, 1.1, 1]
                      }}
                      transition={{ duration: 6, repeat: Infinity }}
                    >
                      <motion.span 
                        className="text-4xl"
                        animate={{ scale: [1, 1.2, 1] }}
                        transition={{ duration: 2, repeat: Infinity }}
                      >
                        🚀
                      </motion.span>
                    </motion.div>
                    <motion.h1 
                      className="text-4xl font-bold bg-gradient-to-r from-eduvos-warm to-eduvos-innovation bg-clip-text text-transparent mb-2"
                      initial={{ opacity: 0 }}
                      animate={{ opacity: 1 }}
                      transition={{ delay: 0.2 }}
                    >
                      Join the Revolution!
                    </motion.h1>
                    <motion.p 
                      className="text-secondary"
                      initial={{ opacity: 0 }}
                      animate={{ opacity: 1 }}
                      transition={{ delay: 0.3 }}
                    >
                      Start your innovation adventure today
                    </motion.p>

                    {/* Signup Progress Indicator */}
                    <motion.div 
                      className="flex justify-center space-x-2 mt-4"
                      initial={{ opacity: 0 }}
                      animate={{ opacity: 1 }}
                      transition={{ delay: 0.4 }}
                    >
                      {[1, 2, 3].map((dot) => (
                        <motion.div
                          key={dot}
                          className={`w-2 h-2 rounded-full ${
                            step >= dot ? 'bg-eduvos-success' : 'bg-glass-border'
                          }`}
                          animate={{
                            scale: step >= dot ? [1, 1.5, 1] : 1,
                            background: step >= dot ? '#10B981' : 'rgba(255,255,255,0.3)'
                          }}
                          transition={{ duration: 0.5 }}
                        />
                      ))}
                    </motion.div>
                  </motion.div>
                )}
              </AnimatePresence>

              {/* Error Message */}
              {error && (
                <motion.div 
                  initial={{ opacity: 0, scale: 0.8 }}
                  animate={{ opacity: 1, scale: 1 }}
                  className="bg-red-500/20 border border-red-500/50 text-red-200 px-4 py-3 rounded-xl text-sm mb-4 backdrop-blur-lg"
                >
                  {error}
                </motion.div>
              )}

              {/* FORM */}
              <motion.form
                initial={{ opacity: 0 }}
                animate={{ opacity: 1 }}
                transition={{ delay: 0.3 }}
                onSubmit={handleSubmit}
                className="space-y-6"
              >
                {/* Email Input */}
                <motion.div
                  initial={{ x: -50, opacity: 0 }}
                  animate={{ x: 0, opacity: 1 }}
                  transition={{ delay: 0.4 }}
                >
                  <label className="block text-sm font-medium text-primary mb-2">
                    {isLogin ? "Your Eduvos Email" : "Enter Your Eduvos Email"}
                  </label>
                  <input
                    type="email"
                    value={email}
                    onChange={(e) => setEmail(e.target.value)}
                    placeholder="innovator@eduvos.ac.za"
                    className="w-full px-4 py-3 bg-glass-white/50 border border-glass-border rounded-xl text-primary placeholder:text-muted focus:outline-none focus:ring-2 focus:ring-eduvos-innovation focus:border-transparent transition-all backdrop-blur-lg"
                    required
                  />
                </motion.div>

                {/* Password Input */}
                <motion.div
                  initial={{ x: -50, opacity: 0 }}
                  animate={{ x: 0, opacity: 1 }}
                  transition={{ delay: 0.5 }}
                >
                  <label className="block text-sm font-medium text-primary mb-2">
                    {isLogin ? "Your Password" : "Create Secure Password"}
                  </label>
                  <input
                    type="password"
                    value={password}
                    onChange={(e) => setPassword(e.target.value)}
                    placeholder={isLogin ? "Enter your password" : "Minimum 6 characters"}
                    className="w-full px-4 py-3 bg-glass-white/50 border border-glass-border rounded-xl text-primary placeholder:text-muted focus:outline-none focus:ring-2 focus:ring-eduvos-innovation focus:border-transparent transition-all backdrop-blur-lg"
                    required
                    minLength={6}
                  />
                </motion.div>

                {/* ACTION BUTTON */}
                <motion.button
                  whileHover={{ 
                    scale: 1.02,
                    boxShadow: "0 0 30px rgba(139, 92, 246, 0.5)"
                  }}
                  whileTap={{ scale: 0.98 }}
                  type="submit"
                  disabled={loading}
                  className="w-full bg-gradient-to-r from-eduvos-electric to-eduvos-innovation py-4 rounded-2xl font-bold text-lg text-white transition-all disabled:opacity-50 disabled:cursor-not-allowed shadow-2xl hover:shadow-3xl relative overflow-hidden"
                >
                  {/* Animated button background */}
                  <motion.div
                    className="absolute inset-0 bg-gradient-to-r from-eduvos-innovation to-eduvos-electric"
                    animate={{
                      backgroundPosition: ['0%', '100%', '0%'],
                    }}
                    transition={{ duration: 3, repeat: Infinity }}
                    style={{
                      backgroundSize: '200% 200%',
                    }}
                  />
                  
                  <span className="relative z-10">
                    {loading ? (
                      <div className="flex items-center justify-center">
                        <motion.div
                          className="w-6 h-6 border-2 border-white border-t-transparent rounded-full mr-2"
                          animate={{ rotate: 360 }}
                          transition={{ duration: 1, repeat: Infinity, ease: "linear" }}
                        />
                        {isLogin ? 'Entering Innovation Hub...' : 'Launching Your Journey...'}
                      </div>
                    ) : (
                      isLogin ? '🚀 Access Innovation Hub' : '🎯 Launch My Innovation Journey'
                    )}
                  </span>
                </motion.button>
              </motion.form>

              {/* TOGGLE AUTH TYPE */}
              <motion.div
                initial={{ opacity: 0 }}
                animate={{ opacity: 1 }}
                transition={{ delay: 0.7 }}
                className="text-center mt-6"
              >
                <p className="text-secondary">
                  {isLogin ? "New to the innovation revolution?" : "Already part of our innovation community?"}{' '}
                  <motion.button
                    type="button"
                    onClick={() => setIsLogin(!isLogin)}
                    className="text-eduvos-accent font-bold hover:text-eduvos-electric transition-colors relative"
                    whileHover={{ scale: 1.05 }}
                    whileTap={{ scale: 0.95 }}
                  >
                    {isLogin ? "Join the Movement →" : "Welcome Back →"}
                    <motion.div
                      className="absolute -bottom-1 left-0 w-0 h-0.5 bg-eduvos-electric"
                      whileHover={{ width: "100%" }}
                      transition={{ duration: 0.3 }}
                    />
                  </motion.button>
                </p>
              </motion.div>
            </div>

            {/* 🎨 DYNAMIC FOOTER MESSAGE */}
            <motion.div
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              transition={{ delay: 1 }}
              className="mt-6 text-center"
            >
              <p className="text-muted text-sm">
                {isLogin ? 
                  "✨ Your next breakthrough awaits inside..." : 
                  "🎓 Join 10,000+ Eduvos innovators changing the world"
                }
              </p>
            </motion.div>
          </motion.div>
        </AnimatePresence>
      </div>
    </div>
  );
}

// Separate loading component for better UX
function LoadingGate() {
  return (
    <div className="min-h-screen flex items-center justify-center bg-gradient-to-br from-eduvos-deep to-eduvos-innovation">
      <motion.div
        initial={{ opacity: 0, scale: 0.5 }}
        animate={{ opacity: 1, scale: 1 }}
        className="text-center"
      >
        <motion.div
          className="w-32 h-32 bg-gradient-to-r from-eduvos-electric to-eduvos-innovation rounded-3xl flex items-center justify-center mx-auto mb-8 shadow-2xl"
          animate={{ 
            rotate: 360,
            scale: [1, 1.1, 1],
          }}
          transition={{ 
            rotate: { duration: 3, repeat: Infinity, ease: "linear" },
            scale: { duration: 2, repeat: Infinity }
          }}
        >
          <span className="text-5xl">🚀</span>
        </motion.div>
        <motion.h2 
          className="text-2xl font-bold text-white mb-4"
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          transition={{ delay: 0.5 }}
        >
          Preparing Innovation Hub...
        </motion.h2>
        <motion.div
          className="w-48 h-1 bg-glass-border rounded-full mx-auto overflow-hidden"
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          transition={{ delay: 0.7 }}
        >
          <motion.div
            className="h-full bg-gradient-to-r from-eduvos-electric to-eduvos-innovation"
            initial={{ x: "-100%" }}
            animate={{ x: "100%" }}
            transition={{ duration: 2, repeat: Infinity, ease: "easeInOut" }}
          />
        </motion.div>
      </motion.div>
    </div>
  );
}